{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "carmona",
  "version": "0.1.0",
  "identifier": "com.carmona.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "CARMONA",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; media-src asset: 'self';",
            "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      }
    }
  },
  
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    
    "resources": [
      "../public/sounds",
      "resources/sounds/**/*"
    ]
  }
}